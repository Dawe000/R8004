{
  "name": "erc8001-agent-task-contracts",
  "version": "0.1.0",
  "description": "ERC8001 Agent Task System smart contracts",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:verbose": "VERBOSE=1 hardhat test",
    "deploy:sandbox": "hardhat run script/plasma/deploy-sandbox.ts",
    "deploy:plasma": "hardhat run script/plasma/deploy-plasma-testnet.ts --network plasma-testnet",
    "print-addresses": "hardhat run script/plasma/print-testnet-addresses.ts",
    "print-deployer-pk": "hardhat run script/print-deployer-pk.ts",
    "testnet:flow": "hardhat run script/plasma/run-testnet-flow.ts",
    "testnet:flow:path-c": "FLOW_PATH=path-c hardhat run script/plasma/run-testnet-flow.ts",
    "testnet:flow:path-a": "FLOW_PATH=path-a hardhat run script/plasma/run-testnet-flow.ts",
    "testnet:flow:path-b-concede": "FLOW_PATH=path-b-concede hardhat run script/plasma/run-testnet-flow.ts",
    "testnet:flow:path-b-uma-agent": "FLOW_PATH=path-b-uma-agent hardhat run script/plasma/run-testnet-flow.ts",
    "testnet:flow:path-b-uma-client": "FLOW_PATH=path-b-uma-client hardhat run script/plasma/run-testnet-flow.ts",
    "testnet:flow:path-b-uma-escalate": "FLOW_PATH=path-b-uma-escalate hardhat run script/plasma/run-testnet-flow.ts --network plasma-testnet",
    "testnet:flow:path-d": "FLOW_PATH=path-d hardhat run script/plasma/run-testnet-flow.ts",
    "testnet:mint": "hardhat run script/plasma/mint-testnet-tokens.ts --network plasma-testnet",
    "check:disputes": "hardhat run script/check-disputes.ts --network plasma-testnet"
  },
  "devDependencies": {
    "@erc8001/agent-task-sdk": "file:../sdk",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@uma/contracts-node": "^0.4.0",
    "@uma/core": "^2.61.0",
    "@types/node": "^20.0.0",
    "hardhat": "^2.19.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.9.0"
  }
}
